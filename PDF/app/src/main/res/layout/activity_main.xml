<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:text="@string/acoustic_sensing"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/Mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginStart="20dp"
        android:text="Mode"
        android:textColor="@color/white"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/Remote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginStart="200dp"
        android:text="Remote"
        android:textColor="@color/white"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/IP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginStart="20dp"
        android:text="Server IP"
        android:textColor="@color/white"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/Port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_marginStart="20dp"
        android:text="Server Port"
        android:textColor="@color/white"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/editIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="125dp"
        android:autofillHints="10.0.0.12"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="@color/white"
        tools:ignore="SpeakableTextPresentCheck" />
    <EditText
        android:id="@+id/editPort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="165dp"
        android:autofillHints="50005"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColor="@color/white"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/Audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AUDIO Settings"
        android:layout_marginTop="250dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/light_grey"/>
    <TextView
        android:id="@+id/Mic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mic"
        android:layout_marginTop="280dp"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/Speaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speaker"
        android:layout_marginTop="310dp"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:textColor="@color/white"/>
    <RadioGroup
        android:id="@+id/RadioGroupMic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:layout_marginStart="150dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="@color/white"/>
        <RadioButton
            android:id="@+id/Front"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Front"
            android:textColor="@color/white"/>
        <RadioButton
            android:id="@+id/Bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bottom"
            android:textColor="@color/white"/>
    </RadioGroup>
    <RadioGroup
        android:id="@+id/RadioGroupSpeaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="305dp"
        android:layout_marginStart="150dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/Top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top"
            android:textColor="@color/white"/>
        <RadioButton
            android:id="@+id/BottomSpeaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bottom"
            android:textColor="@color/white"/>
    </RadioGroup>

    <TextView
        android:id="@+id/Action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACTION"
        android:layout_marginTop="400dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/light_grey"/>
    <Button
        android:id="@+id/Start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="430dp"
        android:text="Start"
        android:backgroundTint="@color/button" />
    <Button
        android:id="@+id/Restart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="480dp"
        android:text="Restart"
        android:backgroundTint="@color/button"/>

    <TextView
        android:id="@+id/Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STATUS"
        android:layout_marginTop="550dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/light_grey"/>
    <TextView
        android:id="@+id/STATUS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="580dp"
        android:layout_marginStart="20dp"
        android:text=""
        android:textSize="20sp"
        android:textColor="@color/white"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>